{
	"compilerOptions": {
		"allowJs": false,
		"noEmit": false,
		"strict": true,
		"target": "ES2019",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"verbatimModuleSyntax": true,
		"noUncheckedIndexedAccess": true,
		"outDir": "dist",
		"types": ["node"],
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/dialects/test.ts"]
}
